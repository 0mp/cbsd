#!/bin/sh
# -d for description
DESC=0

[ "${1}" = "-d" ] && DESC=1

for i in $(/sbin/ifconfig -l); do
    case "${i%%[0-9]*}" in
	ipfw|ppp|sl|lp|faith|fwe|fwip|plip|pfsync|pflog|tun|vboxnet|lo)
	    continue
	    ;;
    esac

    if [ ${DESC} -eq 1 ]; then
	    IDENT=$(pciconf -vl | grep -A4 ^re0 | egrep "device*=*" | cut -d "=" -f 2|xargs)
	echo "${i}: $IDENT"
    else
	echo "${i}"
    fi
done

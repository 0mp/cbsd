#!/bin/sh
#v9.2.2
globalconf="${workdir}/cbsd.conf";
MYARG="node"
MYOPTARG=""
MYDESC="Enter to remote node"

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
init $*

NODECFG="${rsshdir}/${node}.node"
[ -f ${LOCALKEY} ] || err 1 "No node config found"
. ${NODECFG}

[ -f "${SSHKEY}" ] || err 1 "No node key found"

/usr/bin/ssh -t -o "StrictHostKeyChecking no" -o "ConnectTimeout 5" -F ${sshdir}/config -q -i ${SSHKEY} -p${PORT} ${cbsduser}@${IP} -C "cbsd sudo ncshell"

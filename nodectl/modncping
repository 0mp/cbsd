#!/bin/sh
globalconf="${workdir}/cbsd.conf";
NUMARG=2
MYARG="[add|del] ip"
MYNUMARG=$#
MYDESC="Modify for node monitoring"

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
init ${1}

CMD=$1
IP=$2

A=`cbsd nodels | grep "${IP}"`

[ "${A}" = "${IP}" ] || err 1 "No such node ${IP}"

case ${CMD} in
add)
err 0 "Add"
;;
del)
err 0 "Del"
;;
*)
err 1 "Unknown command"
;;
esac

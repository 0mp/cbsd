#!/bin/sh
#v10.0.4
globalconf="${workdir}/cbsd.conf";
CBSDMODULE="bsdconf"
MYARG="mode"
MYOPTARG="jname dns port"
MYDESC="Install timezone helper"
ADDHELP="mode can be: on, off, status\n"

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
. ${inventory}
. ${strings}
init $*

#defines
_MYDIR=$(dirname `realpath $0`)
SERVICE="ssh"

#trap "INSTALLLOOP=0 ; clear; echo; echo \"Exit to shell. To return into bootstrap script, please type: cbsd wb_installer\";  echo" HUP INT ABRT BUS TERM EXIT

### MAIN Route ###
#set -e
#    . ${_MYDIR}/srv_${SERVICE}.subr
#set +e

CFG="/usr/local/etc/${SERVICE}.ini"


if [ -z "${jname}" ]; then
	root_path=""
	exec_cmd=""
else
	. ${jrcconf}
	if [ $? -eq 1 ]; then
		err 1 "${MAGENTA}No such jail: ${GREEN}${jname}${NORMAL}"
	fi
	[ $jid -eq 0 ] && err 1 "${MAGENTA}Jail is not active: ${GREEN}${jname}${NORMAL}"
	root_path="${data}"
	exec_cmd="/usr/sbin/jexec ${jid}"
fi

case "${mode}" in
	"off")
		${exec_cmd} /usr/sbin/sysrc -q sshd_enable="NO"
		${exec_cmd} /etc/rc.d/sshd onestop
		;;
	"on")
		# ops=""
		#if [ -n "${port}" ]; then
		#    IFS=","
		#    for i in ${port}; do
		#	[ -n "${i}" ] && ops="${ops} -oPort=${i}"
		#    done
		#    IFS=" "
		# fi
		# [ -n "${dns}" ] && ops="${ops} -oDNS=${dns}"
		#orig_ops=$( ${exec_cmd} /usr/sbin/sysrc -qn 'sshd_flags' 2>/dev/null |grep -v unknown) # /usr/sbin/sysrc have wrong man for 'XXX:?' or always return 0 code and write error to stdout, not stderr ;(
		#temp_ops1="${orig_ops} ${ops}"
		#new_ops=""
		# trim dup, last values - win
		# todo
		${exec_cmd} /usr/sbin/sysrc -q sshd_enable="YES"
		${exec_cmd} /etc/rc.d/sshd onestart
		;;
	"reload")
		${exec_cmd} /etc/rc.d/sshd reload
		;;
	"status")
		${exec_cmd} /etc/rc.d/sshd onestatus
		;;
esac


#!/bin/sh
# v9.2.2
globalconf="${workdir}/cbsd.conf";
MYARG=""
MYOPTARG="quiet alljails shownode node"
MYDESC="List jail and status"
ADDHELP="alljails=1 - get jaillist from remote note\
shownode=1 - show node ip\n\
node= only for current node\n"

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
. ${inventory}
init $*

[ -d "${jailrcconfdir}" ] || err 1 "No rcconf dir"

show_local()
{
    local _errcode

    if [ -z "${shownode}" ]; then
	cbsd -c "cbsdsql local select jname,jid,ip4_addr,host_hostname,path,status from jails" | while read jname jid ip4_addr host_hostname path status; do
            echo "$jname     $jid     $ip4_addr     $host_hostname     $path     $status"
        done
    else
        cbsd -c "cbsdsql local select jname,jid,ip4_addr,host_hostname,path,status from jails" | while read jname jid ip4_addr host_hostname path status; do
            echo "${nodename}    $jname    $jid    $ip4_addr    $host_hostname    $path     $status"
        done
    fi

    return 0
# Unregister area
    for J in `/bin/ls ${jailrcconfdir}`; do
	jname=""
	. ${jailrcconfdir}/${J}
	[ -z "${jname}" ] && continue

	eval multiips4=\"\$ip4_addr\"
	[ $baserw -eq 1 ] && path=$data
	get_jid
	_errcode=$?

	if [ ${_errcode} -eq 0 ]; then
	    status="Off"
	else
	    status="On"
	fi

	if [ `echo ${J} |grep -c '\.slave$'` = 1 ]; then
	    status="Sl"
	fi

	if [ -z "$quiet" ]; then
	    geniplist ${multiips4}
	    COMMAIPS=`echo ${IPS}| tr " " ","`
	    if [ -n "$shownode" ]; then
		/bin/echo "${nodename}   $jname  ${myjid}  ${COMMAIPS}  ${host_hostname}  ${path}  ${status}"
	    else
		/bin/echo "$jname  ${myjid}  ${COMMAIPS}  ${host_hostname}  ${path}  ${status}"
	    fi
	else
	    /bin/echo "$jname"
	fi
    done
}


show_remote()
{
if [ -z "${node}" ]; then
    node=`cbsd node mode=list`
fi

for _n in $node; do
    [ "${_n}" = "${nodename}" ] && continue
    [ ! -f "${dbdir}/${_n}.sqlite" ] && echo "Node ${_n} have no sqlite db on local host" && continue
    if [ -z "$shownode" ]; then
	cbsd -c "cbsdsql ${_n} select jname,jid,ip4_addr,host_hostname,path,status from jails" | while read jname jid ip4_addr host_hostname path status; do
	    echo "$jname     $jid     $ip4_addr     $host_hostname     $path     $status"
	done
    else
	cbsd -c "cbsdsql ${_n} select jname,jid,ip4_addr,host_hostname,path,status from jails" | while read jname jid ip4_addr host_hostname path status; do
	    echo "${_n}    $jname    $jid    $ip4_addr    $host_hostname    $path     $status"
	done
    fi
done
}


#### MAIN
[ -n "$quiet" ] || {
    if [ -n "$shownode" ]; then
        echo "NODEIP      JNAME        JID       IP      Hostname      Path      Status"
    else
        echo "JNAME      JID      IP      Hostname      Path       Status"
    fi
}

export sqldelimer=" "

if [ -n "$alljails" ]; then
	show_local
	show_remote
	return 0
fi


if [ -n "${node}" ]; then
	show_remote
else
	show_local
fi

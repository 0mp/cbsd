#!/bin/sh
# v9.0.0
globalconf="${workdir}/cbsd.conf";
MYARG=""
MYOPTARG="quiet alljails shownode"
MYDESC="List jail and status"
ADDHELP="alljails=1 - get jaillist from remote note
shownode=1 - show node ip\n"

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
. ${inventory}
init $*

[ -d "${jailrcconfdir}" ] || err 1 "No rcconf dir"

[ -n "$quiet" ] || {
    if [ -n "$shownode" ]; then
	echo "NODEIP   JNAME JID     IP             Hostname          Path      Status"
    else
	echo "JNAME JID     IP             Hostname          Path      Status" 
    fi
}

for J in `/bin/ls ${jailrcconfdir}`; do
. ${jailrcconfdir}/${J}
    [  -z "${jname}" ] && continue
	eval rootdir=\"\$jail_${jname}_rootdir\"
	eval fqdn=\"\$jail_${jname}_hostname\"
	eval multiips=\"\$jail_${jname}_ip\"
	eval baserw=\"\$jail_${jname}_baserw\"
	eval data=\"\$jail_${jname}_data\"
	eval hostname=\"\$jail_${jname}_hostname\"
	[ $baserw -eq 1 ] && rootdir=$data
	get_jid
	jid=$?

	if [ ${jid} -eq 0 ]; then
	    status="Off"
	else
	    status="On"
	fi

	if [ `echo ${J} |grep '\.slave$'|wc -l` = 1 ]; then
	    status="Sl"
	fi

if [ -z "$quiet" ]; then
    geniplist ${multiips}
    COMMAIPS=`echo ${IPS}| tr " " ","`
    if [ -n "$shownode" ]; then
	/bin/echo "${nodename}   $jname  ${jid}  ${COMMAIPS}  ${fqdn}  ${rootdir}  ${status}"
    else
	/bin/echo "$jname  ${jid}  ${COMMAIPS}  ${fqdn}  ${rootdir}  ${status}"
    fi
else
    /bin/echo "$jname"
fi

done

[ -z "$alljails" ] || {
    NODELIST=`cbsd nodels`
    for _n in $NODELIST; do
	    [ ! -f "${rsshdir}/${_n}.node" ] && contiue
#	    . ${rsshdir}/${_n}.node
#	    [ ! -f "${SSHKEY}" ] && continue
	if [ -z "$shownode" ]; then
	    cbsd rexe node=${_n} cbsd jls |tail +2
	else
	    cbsd rexe node=${_n} cbsd jls shownode=1 |tail +2
	fi
    done
}


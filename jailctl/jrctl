#!/bin/sh
# v9.2.2
globalconf="${workdir}/cbsd.conf";
MYARG="mode jname"
MYOPTARG=""
MYDESC="Set or flush resource limit for jail"
ADDHELP="mode= set (apply), unset, show (show current state) or get (show limits)\n"

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
. ${inventory}
. ${strings}
. ${color}
init $*

. ${jrcconf}
[ $? -eq 1 ] && err 1 "${MAGENTA}No such jail: ${GREEN}${jname}${NORMAL}"

jail_rctl() {

    local _action _str _p _out

    case ${mode} in
	"set")
	    _action="rctl -a "
	    ;;
	"unset")
	    _action="rctl -r "
	    ;;
	"show")
	    rctl -hu jail:${jname}
	    return 0
	    ;;
	"get")
	    # Here must be
	    # rctl -l jail:$jname::=/
	    # or
	    # rctl -u jail:$jname::=/
	    # but it still unusable or crashed
	    [ -f "${LIMITS}" ] && cat ${LIMITS}
	    return 0
	    ;;
	*)
	    err 1 "Unknown mode"
    esac

if [ -f "${LIMITS}"  ]; then
    printf "${MAGENTA}${mode} resource limit: [ ${GREEN}"
    cat ${LIMITS} |while read _p; do
	_str="${_action} jail:${jname}:$_p"
	_out=`eval $_str`
	[ $? -eq 0 ] && printf "${_p} "
    done
    printf "${MAGENTA}]${NORMAL}\n"
fi

if [ -f "${LIMITS}.extra"  ]; then
    . ${sharedir}/rctl.conf
    printf "${MAGENTA}${mode} extra resource limit: [ ${GREEN}"
    . ${LIMITS}.extra

#    for _str in ${CBSD_RCTL_EXTRA}; do
#	eval defval="\$${items}_default"
#	
#    done
    printf "${MAGENTA}]${NORMAL}\n"
fi




}

#main
LIMITS="${jailsysdir}/${jname}/jail.limits"
[ ! -d "${jailsysdir}/${jname}" ] && mkdir -p ${jailsysdir}/${jname}
RACCT=`sysctl -qn kern.features.racct`
[ "${RACCT}" != "1" ] && err 0 "${MAGENTA}Your kernel doesn't have RACCT/RCTL support. Skip for resource limit${NORMAL}"

jail_rctl

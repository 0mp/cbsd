#!/bin/sh
#v9.0.0
globalconf="${workdir}/cbsd.conf";
MYARG="jname"
MYOPTARG=""
MYDESC="Force unmount and cleanup for offline jail"

# Cleanup all items of broken jail
[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
init $*

JAILRCCONF="${jailrcconfdir}/rc.conf_${jname}"

[ -f  ${JAILRCCONF} ] || err 1 "no conf rc.conf file for jail"
. ${JAILRCCONF}

eval rootdir=\"\$jail_${jname}_rootdir\"
eval hostname=\"\$jail_${jname}_hostname\"
eval multiips=\"\$jail_${jname}_ip\"
eval fstab=\"\$jail_${jname}_fstab\"
eval data=\"\$jail_${jname}_data\"
eval floatresolv=\"\$jail_${jname}_floatresolv\"
eval exec_start=\"\$jail_${jname}_exec_start\"
eval exec_stop=\"\$jail_${jname}_exec_stop\"
eval base=\"\$jail_${jname}_base\"
eval baserw=\"\$jail_${jname}_baserw\"
eval interface=\"\$jail_${jname}_interface\"

# check for ip and remove them if exist
if [ -n "$interface" ]; then
    for _i in $multiips; do
	IP=`echo ${_i} |cut -d "/" -f 1`
	    if [ `/sbin/ifconfig |grep ${IP} |wc -l` -gt 0 ]; then
		IFACE=`cbsd getnics-by-ip ip=${IP}`
		echo "Remove ${IP} from ${IFACE}"
		/sbin/ifconfig ${IFACE} -alias ${IP}
	    fi
    done
fi

[ $baserw -eq 1 ] && rootdir=$data

umount -f $rootdir/dev > /dev/null 2>&1
tail -r ${fstab} | while read _device _mountpt _fs _mode _a _b; do

if [ -n "${_mountpt}" ]; then
    umount -f ${rootdir}${_mountpt} > /dev/null 2>&1
fi
done
    umount -f ${rootdir}${rootdir} > /dev/null 2>&1
exit 0

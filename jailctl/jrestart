#!/bin/sh
#v9.1.0
globalconf="${workdir}/cbsd.conf";
MYARG=""
MYOPTARG=""
MYDESC="jail jstop jstart sequence"
ADDHELP="jname1 [jname2 ..]\n"

[ -f "${globalconf}" ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
init $*

[ -z "$*" ] && return 0

for j in $*; do
    cbsd jstatus jname=${j} > /dev/null 2>&1

    if [ $? -ne 1 ]; then
	echo "No such jail $j"
	continue
    fi
    cbsd sudo jstop ${j} 
    cbsd sudo jstart ${j}
done


#!/bin/sh
globalconf="${workdir}/cbsd.conf";
NUMARG=2
MYARG="jname hmm"
MYNUMARG=$#
MYDESC="Return node status"

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
init ${1}

NOW=`date +%s`

case $2 in
1)
RES="+${NOW}"
;;
0)
RES="-${NOW}"
;;
*)
err 1 "Unknown status"
;;
esac

NODENAME="node_${1}"
echo $NODENAME $RES >> ${logdir}/nodepinger.log

$DIALOG --title "ips" --clear \
        --inputbox "Enter jail ip (from CBSD pool) \n\
use IP/PREFIX form: ${nodeippool} " -1 -1 "${ip4_addr}" 2> ${TMPFILE}
retval=$?

case $retval in
  0)
    input=`cat ${TMPFILE}`;;
esac
rm -f ${TMPFILE}


# $objmount
get_jail_objmount()
{
st=

while [ x$st = x ]; do
echo "Jail with share /usr/obj [y/n]: "

read reply leftover
    case $reply in
         y* | Y*)
            st=1
                        ;;
                n* | n*)
	    st=0
                        ;;
        esac
done

export objmount=$st
}


#!/bin/sh
#v9.0.0
globalconf="${workdir}/cbsd.conf";
MYARG=""
MYOPTARG=""
MYDESC="This help"

if [ "$1" = "--help" ]; then
    echo $MYDESC
    exit
fi

SDIR="bin jailctl nodectl system tools"
#SCANDIR="{`echo ${SDIR} |tr " " ","`}"

CHECKDIR=""
for _dir in ${SDIR}; do
    CHECKDIR="${CHECKDIR} ${workdir}/${_dir}"
done

for _fl in `find ${CHECKDIR} -depth 1 -type f -perm 0755 -exec basename {} \;|sort -d;`; do
if [ `file ${workdir}/*/${_fl} |grep -c 'POSIX shell script text executable'` = "1" ]; then
MYDESC=`cbsd ${_fl} --help |head -n1 2>/dev/null`
echo "${_fl}  - ${MYDESC}"
else
    echo "${_fl}"
fi
done


myenv="amp"
ver="9.1"
arch="native"
repoversion="version1"

pkg="\
misc/mc \
www/apache22 \
lang/php5 \
databases/mysql55-server \
math/php5-bcmath \
textproc/php5-ctype \
ftp/php5-curl \
textproc/php5-dom \
security/php5-filter \
security/php5-hash \
converters/php5-iconv \
devel/php5-json \
databases/php5-mysql \
databases/php5-pdo \
databases/php5-pdo_mysql \
sysutils/php5-posix \
databases/php5-redis \
www/php5-session \
textproc/php5-simplexml \
www/php5-tidy \
devel/php5-tokenizer \
textproc/php5-xml \
textproc/php5-xmlreader \
textproc/php5-xmlwriter \
textproc/php5-xsl \
archivers/php5-zip \
archivers/php5-zlib \
www/pecl-APC"

buildme()
{
. ${jailrcconfdir}/rc.conf_${myenv}

cat > ${path}/root/make.sh << EOF
#!/bin/sh
mkdir -p /var/db/pkg /var/run /usr/local/etc
env ASSUME_ALWAYS_YES=yes pkg
EOF

for i in ${pkg}; do
MYPORT="/usr/ports/${i}"
PORTNAME=`make -C ${MYPORT} package-name`
TXZPATH="/repo/All/${PORTNAME}.txz"

cat >> ${path}/root/make.sh << EOF
[ -f "${TXZPATH}" ] && {
cd /repo/All/
env ASSUME_ALWAYS_YES=yes pkg add ${TXZPATH}
}
EOF

done

chroot ${path} sh /root/make.sh
}

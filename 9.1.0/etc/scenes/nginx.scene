myenv="nginx"
ver="9.1"
arch="native"
pkg="\
misc/mc \
www/nginx-devel"

buildme()
{
. ${jailrcconfdir}/rc.conf_${myenv}

cat > ${path}/root/make.sh << EOF
#!/bin/sh
echo "nameserver 8.8.8.8" > /etc/resolv.conf
mkdir -p /var/db/pkg /var/run /usr/local/etc
env ASSUME_ALWAYS_YES=yes pkg

for i in \`ls -1 /root/All\`; do
env ASSUME_ALWAYS_YES=yes pkg add /root/All/\$i
done

rm -rf /root/All
EOF

chroot ${path} sh /root/make.sh
}


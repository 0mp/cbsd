#!/bin/sh
#v9.0.0
. /etc/rc.conf
export workdir=${workdir:-"$cbsd_workdir"}
globalconf="${workdir}/cbsd.conf";

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}

[ $# -eq 0 ] || exit

CBSDPROMPT="[`/bin/hostname -s`]#"

while [ 1 ]; do
    printf '%s ' "$CBSDPROMPT"
    read p
    unset $PATH
    [ "$p" != "exit" ] || break
    [ -n "$p" ] && /usr/local/bin/cbsd "$p"
done

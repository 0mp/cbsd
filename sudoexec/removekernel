#!/bin/sh
#v10.0.2
globalconf="${workdir}/cbsd.conf";
CBSDMODULE="build"
MYARG=""
MYOPTARG="ver arch target_arch name stable"
MYDESC="Remove base dir"
ADDHELP="ver=9_1 for 9.1 ver=. for current.\n\
stable=1 for RELENG_X\n"

set -e

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
. ${system}
. ${inventory}
. ${color}
. ${etcdir}/buildworld.conf
. ${workdir}/universe.subr

init $*

. ${buildconf}

init_supported_arch
init_target_arch
init_basedir
init_srcdir
init_kerneldir

[ ! -d "${KERNEL_DIR}" ] && err 1 "${MAGENTA}No such dir: ${NORMAL}${KERNEL_DIR}${NORMAL}"

LOCKFILE=${SRC}.lock
makelock $LOCKFILE
chflags -R noschg ${KERNEL_DIR} && rm -rf ${KERNEL_DIR}

#!/usr/local/bin/cbsd
#v10.1.3
globalconf="${workdir}/cbsd.conf";
MYARG="mode"
MYOPTARG="vhid advskew pass ip interface state"
MYDESC="Enable CARP configuration"
ADDHELP="mode - set,unset,update\n\
interface - physical iface or 'auto'\n\
advskew - advertisements value, e.g. 100\n\
pass - passwordphrase\n\
vhid - ID, e.g 1\n\
ip - virtual ip, e.g: 192.168.1.200/24\n\
state - master,backup\n"

set -e
. ${globalconf}
. ${workdir}/carp.subr
set +e

. ${subr}
. ${tools}
. ${initenv}
init $*

set -e
. ${workdir}/carp.subr
set +e

### MAIN
carp_init

case "${mode}" in
	set)
		check_vhid
		check_interface
		carp_set
		;;
	unset)
		check_vhid
		check_interface
		carp_unset
		;;
	update)
		check_vhid
		check_interface
		carp_update
		;;
	*)
		err 1 "${MAGENTA}Unknown mode: ${GREEN}${mode}${NORMAL}"
		;;
esac

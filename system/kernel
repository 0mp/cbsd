#!/bin/sh
#v9.2.0
globalconf="${workdir}/cbsd.conf";
MYARG=""
MYOPTARG="ver arch maxjobs clean name basename ccache notify"
MYDESC="Build + install kernel from sources"

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
init $*

cbsd buildkernel $@ && cbsd installkernel $@

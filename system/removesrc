#!/bin/sh
#v9.0.0
globalconf="${workdir}/cbsd.conf";
MYARG=""
MYOPTARG="ver"
MYDESC="Remove src-dir"

set -e

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
init $*

[ -n "${ver}" ] || ver=`uname -r|cut -d "-" -f1 |tr "." "_"`

DST="${srcdir}/src_${ver}"

[ -d "${DST}" ] || err 1 "No such dir: ${DST}"

LOCKFILE=${DST}.lock
makelock $LOCKFILE
rm -rf ${DST}

#!/bin/sh
#v9.0.0
globalconf="${workdir}/cbsd.conf";
MYARG=""
MYOPTARG="ver arch name"
MYDESC="Remove obj-dir"

set -e

[ -f ${globalconf} ] || err 1 "no such conf file";
. ${globalconf}
. ${subr}
init $*

# By default ver=current version
[ -n "${ver}" ] || ver=`uname -r|cut -d "-" -f1 |tr "." "_"`
[ -n "${arch}" ] || arch=`uname -m`

SRC="${srcdir}/src_${ver}"
if [ -z "${name}" ]; then
    OBJDIR="${srcdir}/obj_${arch}_${ver}"
else
    OBJDIR="${srcdir}/obj_${name}_${arch}_${ver}"
fi

[ -d "${OBJDIR}" ] || err 1 "No such object dir: ${OBJDIR}"

LOCKFILE=${SRC}.lock
checklock $LOCKFILE
rm -rf ${OBJDIR}
